@page
@model RazorPizzeria.Pages.Checkout.CheckoutModel
@{
}

<h1>Ваш заказ!</h1>
@{
    var imagePath = $"/images/Pizzas/{@Model.ImageTitle}.jpg"; // путь к изображению
}
<dib class="align-content-center">
    <div class="col-3 mx-auto mb-5">
        <img src="@imagePath" class="w-100" asp-asp-append-version="true"/> @*используем путь к изображению*@
         <p>Ваш заказ на @Model.PizzaName пиццу готов!</p>
            <p>Общая цена вашего заказа: @Model.PizzaPrice</p>
            <br />
            <a class="btn btn-primary mt-1 mx-auto" asp-area="" asp-page="ThankYou">Подтвердить заказ</a>
    </div>
@page
@model RazorPizzeria.Pages.PizzaModel
@{
}

<div class="text-center">
  <div class="mainText">
        <h1 class="display-4 text-capitalize text-black">
            Наш большой выбор пиццы!</h1>
            <h4>Выберите один из них или попробуйте наш конструктор пиццы! Затем сделайте заказ и готово</h4>
            <h4>Нет необходимости сообщать какие-либо ваши данные!</h4>
            <h4>Данные по заказу есть!</h4>

            <p class="smallText"><i>Only one pizza per order.</i></p>

            <div class="container">
                <div class="row">
                    <div class="col-12 mb-5 mt-5">
                        <div class="w-100 row makeYourOwnDiv">
                            <div class="col-4">
                                <img src="/images//Pizzas/Create.jpg" class="w-100"/>
                            </div>
                            <div class="col-8 alig-items-center">
                                <div class="align-middle makeYourOwnText">
                                    <h3 style="text-align: left">Создай свою собственную пиццу</h3>
                                    <p stle="text-align: left">Приготовь свою собственную пиццу с помощью нашего производителя пиццы</p>
                                    <a class="btn btn-primary" style="float: left" asp-area="" asp-page="Forms/CustomPizza">Попробуй сейчас</a>
                                </div>
                            </div>
                        </div>
                    </div>
                @foreach (var pizza in Model.pizzaModelDB)
                {
                    var imagePath = $"/images/Pizzas/{pizza.ImageTitle}.jpg";
                                     <div class="col-3 mb-5 pizza-img">   
                                        <h3>@pizza.PizzaName</h3>
                                        <img src="@imagePath" class="w-100 pizza-img" asp-append-version="true"/>
                                            <a class="btn btn-primary mt-1 pizza-img" asp-area="" asp-page="Checkout/Checkout" asp-route-PizzaName="@pizza.PizzaName" asp-route-PizzaPrice="@pizza.FinalPrice">Купить пиццу</a>
                                    <br />
                                 </div>
                }
                </div>
            </div>
    </div>
</div>


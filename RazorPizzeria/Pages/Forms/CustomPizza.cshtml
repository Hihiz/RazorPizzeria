@page
@model RazorPizzeria.Pages.Forms.CustomPizzaModel
@{
}

<div class="text-center container">
    <h1>Создать свою собственную пиццу</h1>
    <form method="post" class="mx-auto mt-5 mb-5 px-5 pt-5 pb-5 rounded-5 bg-light col-4">
        <input type="text" asp-for="Pizza.PizzaName" placeholder="Дайте название вашей пиццы..."/>
        <br /> 

        <input type="checkbox" asp-for="Pizza.TomatoSauce" placeholder="TomatoSauce"/> Томатный соус
        <br /> 

        <input type="checkbox" asp-for="Pizza.Cheese" placeholder="Cheese"/> Сыр
        <br /> 

        <input type="checkbox" asp-for="Pizza.Peperoni" placeholder="Peperoni"/>Пеперони
        <br /> 

        <input type="checkbox" asp-for="Pizza.Mushroom" placeholder="Mushroom"/> Гриб
        <br />

        <input type="checkbox" asp-for="Pizza.Tuna" placeholder="Tuna"/> Тунец
        <br />

        <input type="checkbox" asp-for="Pizza.Pineapple" placeholder="Pineapple"/> Ананас
        <br />

        <input type="checkbox" asp-for="Pizza.Ham" placeholder="Ham"/> Ветчина
        <br />  

        <input type="checkbox" asp-for="Pizza.Beef" placeholder="Beef"/> Говядина
        <br />

        <button class="btn btn-primary mt-1" type="submit">Мой заказ</button>
    </form>
</div>